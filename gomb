#include <stdio.h>

int get_double(int i) {
    return 2*i;
}

float felszin(int r) {
    return 4*3.1415*r*r;
}

float terfogat(int r) {
    return 1.3333*3.1415*r*r*r;
}

int main() {
    int r;

    printf("Kerem a gomb sugarat: ");
    scanf("%d", &r);
    
    printf("A gomb felszine: %.2f\n", felszin(r));
    printf("A gomb terfogata: %.2f\n", terfogat(r));

    //printf("A gomb felszine: %.2f\n", felszin(get_double(r)));
    //printf("A gomb terfogata: %.2f\n", terfogat(get_double(r)));


    return 0;
}
